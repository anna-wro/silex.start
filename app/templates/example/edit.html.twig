{% extends 'base.html.twig' %}

{% block title %}{{ 'title.example_edit'|trans({'%id%': example.id}) }}{% endblock %}

{% block body %}
    <h1>{{ 'title.example_edit'|trans({'%id%': example.id}) }}</h1>
    {% form_theme form with ['bootstrap_3_horizontal_layout.html.twig', 'form/form_errors.html.twig'] %}
    {{ form_start(form, { method: 'post', action: url('example_edit', {'id': example.id}) }) }}
    {{ form_widget(form) }}
    <input type="submit" value="{{ 'action.save'|trans }}" class="btn btn-success" />
    {{ form_end(form) }}
{% endblock %}